#!/usr/bin/env ruby
# :(
Encoding.default_external = Encoding::UTF_8 if defined? Encoding

# load travis library
require 'bundler/setup' if File.exist? File.expand_path('../../Gemfile', __FILE__)
require 'travis/cli'

# load plugins
TRAVIS_PLUGINS = []
config_path    = ENV.fetch('TRAVIS_CONFIG_PATH') { File.expand_path('.travis', Dir.home) }
Dir.glob(File.expand_path('*/init.rb', config_path)) do |file|
  TRAVIS_PLUGINS << file.sub(config_path + '/', '').sub(/\/init\.rb$/, '')
  load(file)
end

if Dir.exists?('.git')
  require 'git'
  g = Git.open(Dir.pwd)
  remote = g.config('remote.origin.url')
  if remote.start_with?('http')
    require 'uri'
    repo = URI(remote).path[1..-1]
  else
    repo = remote.split(':').pop
  end
end
  
# and off we go then
Travis::CLI.run(ARGV)
